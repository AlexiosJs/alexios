{
  "name": "alexios",
  "version": "0.0.1-alpha",
  "description": "A lightweight, powerful and zero-configuration React cli based on Webpack and babel.",
  "main": "lib/modules/index.js",
  "scripts": {
    "lib": "babel ./src -d ./lib --copy-files",
    "start": "watch \"npm run lib\" src --wait=2",
    "format:all": "prettier --write ./src ./bin",
    "lint:all": "eslint ./src --format=pretty",
    "commit": "git-cz"
  },
  "bin": "./bin/alexios.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexiosjs/alexios.git"
  },
  "author": "Cavendichun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexiosjs/alexios/issues"
  },
  "homepage": "https://github.com/alexiosjs/alexios#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit.js"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --format=pretty"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "chalk": "^4.0.0",
    "commands": "^0.0.7",
    "cross-env": "^7.0.2",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^9.0.0",
    "html-webpack-plugin": "^4.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "watch": "^1.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-progress-bar": "^1.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.0.4",
    "conventional-changelog": "^3.1.18",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "git-cz": "^4.3.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  }
}
